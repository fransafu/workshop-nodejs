<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <title>Workshop Node.js</title>
</head>

<body>
    <h1>Posts</h1>
    <% if (posts.length > 0) { %>
        <% posts.forEach(function(post){ %>
            <h3><%= post.title %></h3>
            <p><%= post.content %></p>
        <% }); %>
    <% } else { %>
        <p>No hay post para mostrar</p>
    <% } %>
</body>

</html>